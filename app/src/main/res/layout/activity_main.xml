<layout>
    <data>
        <variable
            name="viewModel"
            type="info.nukoneko.android.readnfcf.ui.MainActivityViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:context="info.nukoneko.android.readnfcf.ui.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:textSize="12sp"
            android:text="@{viewModel.displayText}"
            android:background="@drawable/dot_line"/>

    </LinearLayout>
</layout>
